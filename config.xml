<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<widget id="com.vanillaicecreamstudio.criticalroll" version="0.9.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>CriticalRoll</name>
  <description>
    A tool for Tabletop RPGs as Pathfinder or D&amp;D
  </description>
  <author email="gemorelli@gmail.com" href="http://vanillaicecreamstudio.com/">
    Vanilla Icecream Studio
  </author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="webviewbounce" value="false" />
  <preference name="UIWebViewBounce" value="false" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="BackupWebStorage" value="none" />
  <preference name='windows-target-version' value='8.1' />
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true" />
  </feature>
  <platform name="android">
    <icon src="resources/android/logo-icon-ldpi.png" density="ldpi" />
    <icon src="resources/android/logo-icon-mdpi.png" density="mdpi" />
    <icon src="resources/android/logo-icon-hdpi.png" density="hdpi" />
    <icon src="resources/android/logo-icon-xhdpi.png" density="xhdpi" />
    <icon src="resources/android/logo-icon-xxhdpi.png" density="xxhdpi" />
    <icon src="resources/android/logo-icon-xxxhdpi.png" density="xxxhdpi" />

    <splash src="resources/android/logo-splash_android_ldpi.png" density="port-ldpi" />
    <splash src="resources/android/logo-splash_android_mdpi.png" density="port-mdpi" />
    <splash src="resources/android/logo-splash_android_hdpi.png" density="port-hdpi" />
    <splash src="resources/android/logo-splash_android_xhdpi.png" density="port-xhdpi" />
  </platform>
  <platform name="wp8">
    <splash src="resources/wp8/logo-splash_wp8.png" width="768" height="1280" />
  </platform>
  <icon src="resources/icon.png" />
</widget>